<view class='midtitle'>找回密码</view>
<view class='container'>
    <view class='add'>
      <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input style="position: relative; left: -184rpx; top: -152rpx" class="weui-input" placeholder="姓名" bindinput="InputUser" />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input style="position: relative; left: -184rpx; top: -132rpx" class="weui-input" placeholder="学号" bindinput="InputID" />
                </view>
            </view>
        </view>


        <view class='camera' wx:if="{{reshoot == false}}">
            <camera device-position="front" flash="off" binderror="error" style="width: 100%; height: 350px; position: relative; left: 0rpx; top: -110rpx"></camera>
        </view>

        <view class='preview' wx:if="{{reshoot == true}}">
            <image mode="widthFix" src="{{src}}" style="width: 100%; height: 350px;"></image>
        </view>

        <view class='btn'>
            <button wx:if="{{reshoot == false}}" type="default" bindtap="takePhoto" style="position: relative; left: 0rpx; top: -80rpx">拍照</button>
            <button wx:if="{{reshoot == true}}" type="default" bindtap="reTakePhoto">重拍</button>
        </view>

        <view class='bottom'>
            <button class="weui-btn" bindtap="upload" type="primary" style="position: relative; left: 0rpx; top: -80rpx"> 找回密码 </button>
        </view>
<text style="position: relative; left: 0rpx; top: -61rpx">密码为：{{password}}</text>
    </view>
</view>