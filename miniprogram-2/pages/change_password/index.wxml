<view class="midtitle"> 密码更改</view>
<view class='container'>
    <view class='add'>
      <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input" style='width:70%;margin-left:15%;'>
                <view class="weui-cell__bd" style='border-top-left-radius:8px;border-top-right-radius:8px;width:100%;height:38px;display:inline-block;background:#fff;'>
                  <view style='width:20%;display:inline-block;height:100%;'><image src='./用户.png' style="display: inline; position: relative; left: 0rpx; top: -38rpx" mode="aspectFit"></image></view>
                    <input style="width: 80%; display: inline-block; height: 100%; position: relative; left: 1rpx; top: -38rpx" placeholder-style='font-size:12px;' class="weui-input" placeholder="学号/工号" bindinput="Inputaccount" />
                </view>
	
            <view class="weui-cell__bd" style='width:100%;height:38px;display:inline-block;background:#fff;margin-top:-5px;border-top:1px solid #f8f8f8;border-bottom-left-radius:8px;border-bottom-right-radius:8px;'>
              <view style='width:20%;display:inline-block;height:100%;'><image src='./lock.png' style='display:inline' mode="aspectFit"></image></view>
                    <input style='width:80%;display:inline-block;height:100%;' placeholder-style='font-size:12px;' class="weui-input" placeholder="原密码" bindinput="Input_oldpassword" />
                </view>
                <view class="weui-cell__bd" style='width:100%;height:38px;display:inline-block;background:#fff;margin-top:-5px;border-top:1px solid #f8f8f8;border-bottom-left-radius:8px;border-bottom-right-radius:8px;'>
                  <view style='width:20%;display:inline-block;height:100%;'><image src='./lock.png' style="display: inline; position: relative; left: 0rpx; top: 38rpx" mode="aspectFit"></image></view>
                    <input style="width: 415rpx; display: inline-block; height: 76rpx; box-sizing: border-box; position: relative; left: 7rpx; top: 38rpx" placeholder-style='font-size:12px;' class="weui-input" placeholder="新密码" bindinput="Input_newpassword" />
                </view>
            </view>
        </view>
        <view class='bottom'>
            <button class="weui-btn" bindtap="submit" type="primary" style="position: relative; left: 1rpx; top: 80rpx"> 更改密码 </button>
        </view>
    </view>
    <image src='./cat.jpg' style="position: relative; left: 103rpx; top: -186rpx; width: 496rpx; height: 660rpx; display: block; box-sizing: border-box; z-index: -1"></image>
</view>